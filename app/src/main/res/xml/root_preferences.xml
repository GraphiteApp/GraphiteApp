<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="General">

        <EditTextPreference
            app:key="pref_key_name"
            app:title="Name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Exam">

        <EditTextPreference
            app:key="teacher_code"
            app:title="Teacher Code"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="api_url"
            app:title="API URL"
            app:defaultValue="https://graphite.thearchons.xyz/api/"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>